@page
@model LIA.Admin.Pages.Modules.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="well well-lg text-center" style="margin: 20px 0 20px 0">
    <h2> Module/ Create</h2>
</div>


<div class="row">
    <div class="col-md-4">
        @await Html.PartialAsync("_BackToList-DashboardButtonPartial")
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Module.Title" class="control-label"></label>
                <input asp-for="Module.Title" class="form-control" />
                <span asp-validation-for="Module.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Module.Course.Title" class="control-label"></label>
                <select asp-for="Module.CourseId" class="form-control" asp-items="ViewBag.Courses"></select>
                <span asp-validation-for="Module.CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Now" class="btn btn-success" />

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
