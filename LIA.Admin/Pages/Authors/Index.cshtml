@page
@model LIA.Admin.Pages.Authors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="well well-lg text-center" style="margin: 20px 0 20px 0">
    <h2> Author/ Index</h2>
</div>


<div class="row" style="padding: 0 5% 0 5%">
    <div class="panel">
        @await Html.PartialAsync("_Create-BackToDashboardButtonPartial")
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Author.First().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author.First().Details)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author.First().ImageUrl)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Author)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Details)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImageUrl)
                    </td>
                    <td class="text-right">
                        @await Html.PartialAsync("_ButtonPartial", @item.Id.ToString())
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>

