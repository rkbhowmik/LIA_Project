@page
@model LIA.Admin.Pages.Authors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2 style="margin-bottom: 20px">Author Index</h2>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>


<table class="table table-condensed">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Author[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author[0].Details)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Author) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td class="text-right">
                @await Html.PartialAsync("_ButtonPartial", @item.Id.ToString())
            </td>
        </tr>
}
    </tbody>
</table>
