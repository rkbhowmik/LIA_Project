@page
@model LIA.Admin.Pages.UserCourses.DeleteModel
@{
    ViewData["Title"] = "Delete";
}


<div class="well well-lg text-center" style="margin: 20px 0 20px 0">
    <h2> UserCourse/ Delete</h2>
</div>

@await Html.PartialAsync("_BackToList-DashboardButtonPartial")


<div>
    <h3 class="text-danger">Are you sure you want to delete this?</h3>
    <dl class="dl-horizontal">
        <dt>
            Title
        </dt>
        <dd>
            @ViewBag.CourseTitle
        </dd>
        <dt>
            Email
        </dt>
        <dd>
            @ViewBag.Email
        </dd>

    </dl>

    <form method="post">
        <input type="hidden" asp-for="UserCourse.CourseId" />
        <input type="hidden" asp-for="UserCourse.UserId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>