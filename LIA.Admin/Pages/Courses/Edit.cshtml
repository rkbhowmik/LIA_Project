@page
@model LIA.Admin.Pages.Courses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="well well-lg text-center" style="margin: 20px 0 20px 0">
    <h2> Course/ Edit</h2>
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Course.Id" />
            <div class="form-group">
                <label asp-for="Course.Title" class="control-label"></label>
                <input asp-for="Course.Title" class="form-control" />
                <span asp-validation-for="Course.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Description" class="control-label"></label>
                <input asp-for="Course.Description" class="form-control" />
                <span asp-validation-for="Course.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Image" class="control-label"></label>
                <input asp-for="Course.Image" class="form-control" />
                <span asp-validation-for="Course.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Author.Name" class="control-label"></label>
                <select asp-for="Course.AuthorId" class="form-control" asp-items="ViewBag.AuthorId"></select>
                <span asp-validation-for="Course.AuthorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-success" />
                @await Html.PartialAsync("_BackToList-DashboardButtonPartial")
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
