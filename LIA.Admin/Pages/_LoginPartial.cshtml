
@using Microsoft.AspNetCore.Identity
@using LIA.Data.Data.Entities;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                @*<a asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)! <span><img src="~/images/businessman.png" style="height: 30px; width: 30px;"/></span></a>*@

                <a asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name! <span><img src="~/images/businessman.png" style="height: 30px; width: 30px;" /></span></a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-page="/Account/Register">Register</a></li>
        <li><a asp-page="/Account/Login">Log in</a></li>
    </ul>
}
