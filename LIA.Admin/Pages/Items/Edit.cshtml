@page
@model LIA.Admin.Pages.Items.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Item.Id" />
            <div class="form-group">
                <label asp-for="Item.URL" class="control-label"></label>
                <input asp-for="Item.URL" class="form-control" />
                <span asp-validation-for="Item.URL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Description" class="control-label"></label>
                <input asp-for="Item.Description" class="form-control" />
                <span asp-validation-for="Item.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.ModuleId" class="control-label"></label>
                <select asp-for="Item.ModuleId" class="form-control" asp-items="ViewBag.ModuleId"></select>
                <span asp-validation-for="Item.ModuleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.ItemTypeId" class="control-label"></label>
                <select asp-for="Item.ItemTypeId" class="form-control" asp-items="ViewBag.ItemTypeId"></select>
                <span asp-validation-for="Item.ItemTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
