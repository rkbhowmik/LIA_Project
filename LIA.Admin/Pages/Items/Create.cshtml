@page
@model LIA.Admin.Pages.Items.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Item.URL" class="control-label"></label>
                <input asp-for="Item.URL" class="form-control" />
                <span asp-validation-for="Item.URL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Description" class="control-label"></label>
                <input asp-for="Item.Description" class="form-control" />
                <span asp-validation-for="Item.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Item.ItemType" class="control-label"></label>
                <select asp-for="Item.ItemTypeId" class="form-control" asp-items="ViewBag.ItemType"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Now" class="btn btn-success" />
                @await Html.PartialAsync("_BackToList-DashboardButtonPartial")
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
