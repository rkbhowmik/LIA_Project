@page
@model LIA.Admin.Pages.Items.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

@await Html.PartialAsync("_Create-BackToDashboardButtonPartial")

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item.First().URL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item.First().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item.First().ItemType)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Item[0].Module)
                </th>*@
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Item)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.URL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemType.Title)
                </td>

                <td>
                    @await Html.PartialAsync("_ButtonPartial", @item.Id.ToString())
                </td>
            </tr>
        }
    </tbody>
</table>
