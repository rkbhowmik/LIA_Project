@page
@model LIA.Admin.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="well well-lg text-center" style="margin: 20px 0 20px 0">
    <h2> User/ Index</h2>
</div>
<div class="row" style="padding: 0 10% 0 10%">
    <div class="panel">
        @await Html.PartialAsync("_Create-BackToDashboardButtonPartial")
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Users.First().Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Users.First().IsAdmin)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Users)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsAdmin)
                    </td>
                    <td class="text-right">
                        @await Html.PartialAsync("_ButtonPartial", @item.Id)
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>

