@page
@model LIA.Admin.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(h => h.UserPageModel.Id);
            <div class="form-group">
                <label asp-for="UserPageModel.Email" class="control-label"></label>
                <input asp-for="UserPageModel.Email" class="form-control" />
                <span asp-validation-for="UserPageModel.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="UserPageModel.IsAdmin">
                        <input asp-for="UserPageModel.IsAdmin" />
                        @Html.DisplayNameFor(m => m.UserPageModel.IsAdmin)
                    </label>
                </div>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}