@page
@model LIA.Admin.Pages.Users.CreateModel
@{
    ViewData["Title"] = "Create";
}

<div class="well well-lg text-center" style="margin: 20px 0 20px 0">
    <h2> User/ Create</h2>
</div>
<div class="row">
    <div class="col-md-4">
        @await Html.PartialAsync("_BackToList-DashboardButtonPartial")
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegisterUser.Email" class="control-label"></label>
                <input asp-for="RegisterUser.Email" class="form-control" />
                <span asp-validation-for="RegisterUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterUser.Password" class="control-label"></label>
                <input asp-for="RegisterUser.Password" class="form-control" />
                <span asp-validation-for="RegisterUser.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterUser.ConfirmPassword" class="control-label"></label>
                <input asp-for="RegisterUser.ConfirmPassword" class="form-control" />
                <span asp-validation-for="RegisterUser.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Now" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}