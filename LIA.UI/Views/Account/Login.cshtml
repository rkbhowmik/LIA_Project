@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using LIA.Data.Data.Entities;

@model LoginViewModel
@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="modal-dialog text-center">
        <div class="col-lg-8 col-sm-8 col-md-8 main-section">
            <div class="modal-content">
                <div class="col-lg-12 col-sm-12 col-md-12 user-img">
                    <img src="~/images/user.png" />
                </div>
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <span class="glyphicon glyphicon-envelope"></span>
                        <input asp-for="Email" class="form-control  active" placeholder="Enter Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <span class="glyphicon glyphicon-lock"></span>
                        <input asp-for="Password" class="form-control" placeholder="Enter Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                           
                            <label asp-for="RememberMe" style="color: white">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn1"><span class="glyphicon glyphicon-log-in"> </span>&nbsp Log in</button>
                    </div>
                </form>
                <div class="forgot">
                    <div class="row">
                        <a asp-action="ForgotPassword">Forgot your password?</a>
                    </div>
                    <div class="row">
                        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
                    </div>
                </div>
 
            </div> <!--End Modal Content-->
        </div>
    </div>
</div>
